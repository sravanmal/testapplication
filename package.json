{
  "name": "testapplication",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@cap-js/sdm": "^1.2.2",
    "@sap-cloud-sdk/http-client": "^3.25.0",
    "@sap-cloud-sdk/resilience": "^3.25.0",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.8.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-testapplication": "cds watch --open testapplication/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy testapplication --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "dummy"
      },
      "sdm": {
        "settings": {
          "repositoryId": "4d4ecb70-02a5-44af-bb60-fe18c9e3ef7e"
        }
      },
      "connectivity": true,
      "destinations": true,
      "bpa_destination": {
        "kind": "rest",
        "credentials": {
          "destination": "testdirectreq"
        }
      },
      "OP_API_PRODUCT_SRV_0001": {
        "kind": "odata-v2",
        "model": "srv/external/OP_API_PRODUCT_SRV_0001",
        "credentials": {
          "destination": "S4H",
          "path": "/sap/opu/odata/sap/API_PRODUCT_SRV"
        }
      }
    }
  },
  "sapux": [
    "app/testapplication"
  ]
}